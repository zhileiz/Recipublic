<% provide(:page_title, "Sign Up") %>
<% provide(:profile_active, "active") %>

<div class="row title" style="padding:20px;">
  <div class="col-12">
    <h2>Edit Your Profile</h2>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-6">
    <h3>Basic Info</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
        <div class="col-sm-6">
            <%= f.file_field :avatar %>
        </div>
      </div>

      <div class="field form-group">
        <%= f.label :username %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :detail %><br />
        <%= f.text_area :detail, autofocus: true, class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
      </div>
      <div class="field form-group">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Update", class:"sm-submit" %>
      </div>
  </div>
  <div class="col-6">
    <div style="background-color:rgba(255,92,0,0.2); padding:10px; border-radius: 10px;">
      <h3>Change Password</h3>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em> (<%= @minimum_password_length %> characters minimum) </em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
      </div>
    </div>

    <div style="margin-top:30px;background-color:rgba(255,0,0,0.2); padding:10px; border-radius: 10px;">
      <h3>Dangerous Zone</h3>
      <p>Cancel My Account</p>
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"sm-submit" %>
    </div>
  </div>
</div>

  <% end %>
