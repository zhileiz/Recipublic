<div class="card" style="display:inline-block;">
  <img class="card-img-top img-fluid" src="<%= recipe.image %>" alt="Card image cap">
  <div class="card-block">
    <h4 class="card-title"><%= link_to truncate(recipe.title, length:32), recipe %></h4>
    <p class="card-text">
      <%= truncate(recipe.description, length:100) %>
    </p>
    <div style="margin-top:-8px; margin-left:-6px; line-height:33px;">
      <% (1..recipe.tags.size).each do |i|%>
        <%= link_to recipe.tags[i-1] do %>
          <span id="tag">
            <%= recipe.tags[i-1].name %>
          </span>
        <% end %>
      <% end %>
    </div>
    <div class="row" style="margin-top:10px; padding-top:5px; border-top:1px solid grey; padding-bottom:-2px; margin-bottom:-7px;">
      <div class="col-8">
        <div class="row">
          <div class="col-4">
            <div class="round-image-50">
              <%= image_tag(recipe.user.avatar.url) %>
            </div>
          </div>
          <div class="col-8">
            <div style="font-size:14px;padding-top:5px;">
              Created by <i><%= recipe.user.name %></i>
            </div>
          </div>
        </div>
      </div>
      <div class="col-4 text-right">
        <div style="padding-top:15px; padding-right:10px;">
          <%= link_to like_recipe_path(recipe), method: :put, class:"sm-like" do %>
          <strong>
            <i class="fa fa-heart" aria-hidden="true"></i>
            <%= recipe.get_upvotes.size %>
          </strong>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
