<% @recipes.each do |recipe| %>
<div class="col-sm-6 col-lg-3">
    <div class="card user-card">
      <img class="card-topper" src="<%= recipe.image %>" alt="Card image cap">
      <div class="card-block" style="text-align:center;">
        <h4 class="card-title"><%= link_to truncate(recipe.title, length:32), recipe %></h4>
      </div>
    </div>
  </div>
<% end %>
